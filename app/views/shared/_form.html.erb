<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient, input_html: { class: 'select2 form-control' } %>
  <%= f.input :description, label: 'Quantity' %>
  <%= button_tag :submit, class: "btn btn-primary w-100" do %>
    <%= icon('fas', 'check', "Add ingredient") %>
  <% end %>
<% end %>