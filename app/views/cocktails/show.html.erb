<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> of <%= dose.ingredient.name.downcase %>
      <%= link_to icon('far', 'times-circle'),
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" }  %>
    </li>
  <% end %>
  <li><%= link_to icon('fas', 'plus-circle', 'Add an ingredient'), new_cocktail_dose_path(@cocktail)  %></li>
</ul>

<%= link_to "Back to cocktails list", cocktails_path  %>