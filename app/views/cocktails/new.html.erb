<div id="content" class="row">
  <div class="col-12 col-md-6 col-xl-4" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1550426735-c33c7ce414ff?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1520&q=80');background-repeat: no-repeat; background-size: cover; background-position: center"></div>
  <div class="col-12 col-md-6 col-xl-8 px-5">
    <h1 class="py-3">Add a cocktail</h1>

    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>
      <div class="d-flex justify-content-between">
        <%= link_to icon('fas', 'chevron-left', "Back to cocktails list"), cocktails_path, class: "btn btn-secondary"  %>
        <%= button_tag :submit, class: "btn btn-primary" do %>
          <%= icon('fas', 'check', "Submit cocktail") %>
        <% end %>      
      </div>
    <% end %>
  </div>
</div>